#!/bin/sh

mkdir -p ~/.config/alacritty ~/.config/dunst ~/.config/i3 ~/.config/picom ~/.config/polybar ~/.config/rofi ~/.config/.theom

# Alacritty
[ ! -f ~/.config/alacritty/alacritty.toml ] && cp /usr/share/theom/config/alacritty/alacritty.toml ~/.config/alacritty/

# Dunst
[ ! -f ~/.config/dunst/dunstrc ] && cp /usr/share/theom/config/dunst/dunstrc ~/.config/dunst/

# i3
#[ ! -f ~/.config/i3/config ] && cp /usr/share/theom/config/i3/config ~/.config/i3/

# Picom
#[ ! -f ~/.config/picom/picom.conf ] && cp /usr/share/theom/config/picom/picom.conf ~/.config/picom/

# Polybar
[ ! -f ~/.config/polybar/config.ini ] && cp /usr/share/theom/config/polybar/config.ini ~/.config/polybar/
[ ! -f ~/.config/polybar/launch.sh ] && cp /usr/share/theom/config/polybar/launch.sh ~/.config/polybar/

# Rofi
[ ! -f ~/.config/rofi/config.rasi ] && cp /usr/share/theom/config/rofi/config.rasi ~/.config/rofi/
[ ! -f ~/.config/rofi/colors.rasi ] && cp /usr/share/theom/config/rofi/colors.rasi /.config/rofi/

# Starship
[ ! -f ~/.config/starship.toml ] && cp /usr/share/theom/config/starship.toml ~/.config/starship.toml
if ! grep -q 'eval "$(starship init bash)"' "$HOME/.bashrc"; then
    echo 'eval "$(starship init bash)"' >> "$HOME/.bashrc"
fi

# Theom
[ ! -f ~/.config/.theom/config.json ] && cp /usr/share/theom/config/.theom/config.json ~/.config/.theom/